<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="HomeSubMenu">
        <control type="group" id="9100">
            <include>skinshortcuts-template-submenus</include>
        </control>
    </include>
    <include name="HomeSubButtonsFocus">
        <control type="button" id="$PARAM[control_id]888">
            <width>1</width>
            <height>1</height>
            <label></label>
            <onfocus>SetFocus($PARAM[control_id]900)</onfocus>			
            <onclick>noop</onclick>
            <texturefocus></texturefocus>
            <texturenofocus></texturenofocus>
        </control>
    </include>
    <include name="SubMenuList">
		<control type="group">
            <visible>!Integer.IsEqual(Container($PARAM[list_id]).NumItems,0)</visible>
			<height>110</height>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,0)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,1)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,2)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,3)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,4)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,5)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,6)">conditional</animation>
			<animation effect="slide" end="110,0" time="0" condition="!Integer.IsGreater(Container($PARAM[list_id]).NumItems,7)">conditional</animation>
			<control type="label">
				<left>225</left>
				<top>53</top>
				<width>700</width>
				<height>40</height>
				<label>$INFO[Container($PARAM[list_id]).Listitem.Label]</label>
				<shadowcolor>text_shadow</shadowcolor>
				<font>font20_title</font>
				<align>right</align>
				<animation effect="fade" time="200">VisibleChange</animation>
				<visible>Control.HasFocus($PARAM[list_id])</visible>
			</control>
            <include content="LeftRightArrows">
				<param name="posy" value="65" />
				<param name="list_id" value="$PARAM[list_id]" />
			</include>
			<control type="panel" id="$PARAM[list_id]">
				<orientation>horizontal</orientation>
				<onleft>9000</onleft>
				<left>935</left>
				<top>22</top>
				<height>110</height>
				<width>880</width>
				<onup>200000</onup>
                <ondown condition="String.IsEqual(Container(9000).ListItem.Property(widget),WeatherWidget)">$PARAM[ondown_id]100</ondown>
				<ondown condition="String.IsEqual(Container(9000).ListItem.Property(widget),FavouritesWidget)">$PARAM[ondown_id]110</ondown>                
                <ondown condition="String.IsEqual(Container(9000).ListItem.Property(widget),TVWidget)">$PARAM[ondown_id]121</ondown>
                <ondown condition="String.IsEqual(Container(9000).ListItem.Property(widget),RadioWidget)">$PARAM[ondown_id]131</ondown>                
				<ondown condition="String.IsEqual(Container(9000).ListItem.Property(widget),AddonsWidget)">$PARAM[ondown_id]140</ondown>	
				<ondown condition="String.IsEqual(Container(9000).ListItem.Property(widget),MediaWidget)">$PARAM[ondown_id]150</ondown>
                <ondown condition="String.IsEmpty(Container(9000).ListItem.Property(widget))">200001</ondown>
				<itemlayout width="110" height="120">
					<control type="image">
						<width>130</width>
						<height>110</height>
						<texture border="40">buttons/button-nofo.png</texture>
					</control>
					<control type="image">
						<left>30</left>
						<top>20</top>
						<width>70</width>
						<height>70</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="110" height="120">
					<control type="image">
						<width>130</width>
						<height>110</height>
						<texture border="40" colordiffuse="$VAR[MainColorVar]">buttons/button-fo.png</texture>
					</control>
					<control type="image">
						<left>30</left>
						<top>20</top>
						<width>70</width>
						<height>70</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
				</focusedlayout>
				<content>
                    <include>$PARAM[content_submenu]</include>
				</content>
			</control>
		</control>
    </include>
</includes>