<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>3</zorder>
	<controls>
		<control type="group">
            <!-- Right Top Default -->
			<depth>DepthMax</depth>
			<top>95</top>
			<right>20</right>
			<width>640</width>
			<include>Animation_DialogPopupOpenClose</include>
			<visible>String.IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
            <visible>!Window.IsVisible(Startup.xml) + ![[Window.IsActive(fullscreenvideo) | Window.IsActive(fullscreeninfo) | Window.IsActive(visualisation)] + Skin.HasSetting(hide_popup)]</visible>
            <!-- Bottom -->
			<animation effect="slide" end="0,785" time="0" condition="String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44107]) | String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44108]) | String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44109])">conditional</animation>
            <!-- Center -->
            <animation effect="slide" end="-620,0" time="0" condition="String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44105]) | String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44108])">conditional</animation>
            <!-- Left -->
			<animation effect="slide" end="-1240,0" time="0" condition="String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44104]) | String.IsEqual(Skin.String(PopupPosition.label),$LOCALIZE[44107])">conditional</animation>
			<control type="image">
				<left>-25</left>
				<top>-25</top>
				<width>690</width>
				<height>150</height>
				<colordiffuse>EEFFFFFF</colordiffuse>
				<texture border="22">dialogs/dialog-bg.png</texture>
			</control>
			<control type="image" id="400">
				<description>avatar</description>
				<left>10</left>
				<top>10</top>
				<width>80</width>
				<height>80</height>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="fadelabel" id="401">
				<description>Line 1 Label</description>
				<left>105</left>
				<top>20</top>
				<width>520</width>
				<height>18</height>
				<font>font24_title</font>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
			<control type="fadelabel" id="402">
				<description>Line 2 Label</description>
				<left>106</left>
				<top>55</top>
				<width>520</width>
				<height>20</height>
				<font>font12</font>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
		</control>
	</controls>
</window>
