<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol></defaultcontrol>
	<controls>
        <control type="label">
            <description>SlideShow Info</description>
            <left>25</left>
            <top>25</top>
            <width>600</width>
            <height>25</height>
            <font>font12</font>
            <textcolor>grey</textcolor>
            <shadowcolor>black</shadowcolor>
            <scroll>false</scroll>
            <align>left</align>
            <aligny>center</aligny>
            <label>([COLOR $VAR[MainColorVar]]$INFO[Slideshow.SlideIndex][/COLOR]) $INFO[Slideshow.Filename]</label>
            <visible>Skin.HasSetting(slideshow_info)</visible>
        </control>
        <control type="label">
            <description>Clock label</description>
            <left>1100</left>
            <top>25</top>
            <width>800</width>
            <height>25</height>
            <align>right</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <label>$INFO[System.Time]</label>
            <animation effect="slide" start="0,0" end="-65,0" time="0" condition="Window.IsActive(volumebar) | Player.Muted">conditional</animation>
            <animation effect="slide" start="0,0" end="-50,0" time="0" condition="SlideShow.IsPaused">conditional</animation>
            <visible>Skin.HasSetting(full_screen_clock)</visible>
        </control>
		<control type="group" id="13">
			<left>60r</left>
			<top>0</top>
			<visible>!Skin.HasSetting(Show_SlideShow_Paused)</visible>
			<control type="image">
				<left>0</left>
				<top>20</top>
				<width>40</width>
				<height>40</height>
                <aspectratio>keep</aspectratio>				
                <texture>icons/now-playing/pause.png</texture>
                <animation effect="slide" start="0,0" end="-55,0" time="0" condition="Window.IsActive(volumebar) | Player.Muted">conditional</animation>
			</control>
		</control>
	</controls>
</window>
