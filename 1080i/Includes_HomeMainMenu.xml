<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="HomeSystemButtons">
        <!-- System Buttons -->
        <control type="grouplist" id="900">
            <orientation>horizontal</orientation>
            <itemgap>-16</itemgap>
            <left>33</left>
            <top>94</top>
            <onup>SetFocus(9000,99)</onup>
            <onup>9000</onup>
            <ondown>9000</ondown>
            <onright>2000</onright>
            <!-- Power button -->
            <include content="BottomMainMenuItem">
                <param name="control_id" value="901" />
                <param name="onclick" value="SetProperty(fanarthometype,power,home)" />
                <param name="onclick2" value="SetProperty(homebackground,$VAR[BackgroundPowerVar],home)" />
                <param name="onclick3" value="ActivateWindow(shutdownmenu)" />
                <param name="icon" value="icons/power.png" />
                <param name="label" value="$LOCALIZE[33060]" />
            </include>
            <!-- Favourites button -->
            <include content="BottomMainMenuItem">
                <param name="control_id" value="902" />
                <param name="onclick" value="SetProperty(fanarthometype,favourites,home)" />
                <param name="onclick2" value="SetProperty(homebackground,$VAR[BackgroundFavoritesVar],home)" />
                <param name="onclick3" value="ActivateWindow(favourites)" />
                <param name="icon" value="icons/favourites.png" />
                <param name="label" value="$LOCALIZE[10134]" />
            </include>
            <!-- Search button -->
            <include content="BottomMainMenuItem">
                <param name="control_id" value="903" />
                <param name="onclick" value="SetProperty(fanarthometype,search,home)" />
                <param name="onclick2" value="SetProperty(homebackground,$VAR[BackgroundSearchVar],home)" />
				<param name="onclick3" value="ActivateWindow(1107)" />
                <param name="icon" value="icons/search.png" />
                <param name="label" value="$LOCALIZE[31001]" />
            </include>
            <!-- FullScreen button -->
            <include content="BottomMainMenuItem">
                <param name="control_id" value="904" />
                <param name="onclick" value="FullScreen" />
				<param name="onclick2" value="" />
                <param name="icon" value="icons/now-playing/fullscreen.png" />
                <param name="label" value="$LOCALIZE[244]" />
				<param name="selected" value="!Player.Paused" />
				<param name="visible" value="Player.hasMedia" />
            </include>
        </control>
    </include>
    <include name="HomeMainMenu">
        <include content="UpDownArrows">
            <param name="width" value="28" />
            <param name="height" value="18" />
            <param name="container_id" value="9000" />
            <param name="posx" value="231" />
            <param name="up_posy" value="90" />
            <param name="down_posy" value="978" />
            <param name="visible" value="!System.HasModalDialog" />
        </include>
        <control type="group">
            <left>53</left>
            <top>204</top>
            <control type="image">
				<description>Menu Panel</description>
                <left>-20</left>
                <top>-20</top>
                <width>424</width>
                <height>810</height>
                <texture border="22">dialogs/dialog-bg.png</texture>
            </control>
            <control type="list" id="9000">
				<description>button area</description>
                <left>1</left>
                <top>1</top>
                <width>382</width>
                <height>770</height>
                <pagecontrol>70</pagecontrol>
                <onfocus>ClearProperty(listposition,home)</onfocus>
                <onright>9100</onright>
                <onup>900</onup>
                <ondown>900</ondown>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <focusedlayout height="70">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>390</width>
                        <height>71</height>
                        <texture border="90,3,90,3">lists/separator.png</texture>
                    </control>
                    <control type="group">
                        <animation effect="fade" start="100" end="0" time="0">UnFocus</animation>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>390</width>
                            <height>69</height>
                            <texture colordiffuse="$VAR[MainColorVar]">lists/focus.png</texture>
                            <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(9000) + !Control.HasFocus(900) + !ControlGroup(700).HasFocus + !Control.HasFocus(14200)">Conditional</animation>
                        </control>
                        <control type="image">
                            <left>-3</left>
                            <top>1</top>
                            <width>70</width>
                            <height>70</height>
                            <texture colordiffuse="$VAR[MainColorVar]">$INFO[ListItem.Icon]</texture>
                            <animation effect="fade" start="0" end="100" time="300" reversible="false">Focus</animation>
                        </control>
                        <control type="image">
                            <left>-5</left>
                            <top>0</top>
                            <width>68</width>
                            <height>70</height>
                            <texture colordiffuse="51FFFFFF">colors/black.png</texture>
                            <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(9000) + !Control.HasFocus(900) + !ControlGroup(700).HasFocus + !Control.HasFocus(14200)">Conditional</animation>
                        </control>
                    </control>
                    <control type="image">
                        <left>-3</left>
                        <top>1</top>
                        <width>70</width>
                        <height>70</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                    <control type="image">
                        <left>-3</left>
                        <top>1</top>
                        <width>70</width>
                        <height>70</height>
                        <animation effect="fade" start="0" end="100" time="200" delay="200" condition="!System.HasModalDialog">Conditional</animation>
                        <animation effect="fade" start="100" end="0" time="0" condition="System.HasModalDialog">Conditional</animation>
                        <texture colordiffuse="$VAR[MainColorVar]">$INFO[ListItem.Icon]</texture>
                        <animation effect="fade" start="0" end="100" time="300" reversible="false">Focus</animation>
                        <visible>!Control.HasFocus(9000) + !Control.HasFocus(900)</visible>
                    </control>
                    <control type="label">
                        <left>74</left>
                        <top>0</top>
                        <height>70</height>
                        <width>560</width>
                        <aligny>center</aligny>
                        <font>font14</font>
                        <label>$INFO[ListItem.Label]</label>
                        <shadowcolor>text_shadow</shadowcolor>
                    </control>
                </focusedlayout>
                <itemlayout height="70">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>390</width>
                        <height>71</height>
                        <texture border="90,3,90,3">lists/separator.png</texture>
                    </control>
                    <control type="label">
                        <left>74</left>
                        <top>0</top>
                        <height>70</height>
                        <width>560</width>
                        <aligny>center</aligny>
                        <font>font14</font>
                        <label>$INFO[ListItem.Label]</label>
                        <shadowcolor>text_shadow</shadowcolor>
                    </control>
                    <control type="image">
                        <left>-3</left>
                        <top>1</top>
                        <width>70</width>
                        <height>70</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <content>
                    <include>skinshortcuts-mainmenu</include>
                </content>
            </control>
        </control>
    </include>
</includes>