<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>9000</defaultcontrol>
	<!-- SkinShortcuts-->
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu|powermenu)</onload>
	<!-- SkinHelper -->
    <onload condition="Skin.HasSetting(smartshortcuts_playlists)">Skin.SetBool(SmartShortcuts.playlists)</onload>
    <onload condition="!Skin.HasSetting(smartshortcuts_playlists)">Skin.Reset(SmartShortcuts.playlists)</onload>
    <onload condition="Skin.HasSetting(smartshortcuts_favorites)">Skin.SetBool(SmartShortcuts.favorites)</onload>
    <onload condition="!Skin.HasSetting(smartshortcuts_favorites)">Skin.Reset(SmartShortcuts.favorites)</onload>
    <onload condition="Skin.HasSetting(animated_posters)">Skin.SetBool(SkinHelper.EnableAnimatedPosters)</onload>
    <onload condition="!Skin.HasSetting(animated_posters)">Skin.Reset(SkinHelper.EnableAnimatedPosters)</onload>
    <onload>Skin.SetBool(SkinHelper.EnableExtendedArt)</onload>
    <onload>Skin.SetBool(SkinHelper.EnableMusicArt)</onload>
    <onload>Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
    <onload>Skin.SetBool(SkinHelper.EnableAddonsLookups)</onload>
    <onunload>ClearProperty(SkinHelper.WidgetContainer)</onunload>
	<!-- -->
	<onload condition="!String.IsEmpty(Window(home).Property(FanartHomeType))">ClearProperty(FanartHomeType,home)</onload>
    <onload condition="System.HasAddon(script.pvr.favourites)+Skin.HasSetting(enable_custom_list_channels)+[Skin.HasSetting(enable_custom_list_channels_tv) | Skin.HasSetting(enable_custom_list_channels_radio)]">XBMC.RunScript(script.pvr.favourites)</onload>
	<backgroundcolor>background</backgroundcolor>
	<controls>
		<control type="button" id="200000">
			<include>HiddenObject</include>
			<animation effect="fade" time="300" start="100" end="0">Focus</animation>
			<onfocus>SetFocus(2000)</onfocus>
			<onclick>noop</onclick>
			<visible allowhiddenfocus="true">Control.HasFocus(200000)</visible>
		</control>
		<control type="button" id="200001">
			<include>HiddenObject</include>
			<animation effect="fade" time="300" start="100" end="0">Focus</animation>
			<onfocus>SetFocus(2000)</onfocus>
			<onclick>noop</onclick>
			<visible allowhiddenfocus="true">Control.HasFocus(200001)</visible>
		</control>
		<!-- Background -->
		<include content="DefaultBackground">
			<param name="is_media" value="False" />
			<param name="image_path" value="$VAR[HomeFanartVar]" />
		</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>
			<!-- TopBar -->
			<include content="TopBar">
				<param name="breadcrumbs_label" value="" />
				<param name="breadcrumbs_icon" value="" />
			</include>
			<!-- Logo -->
			<control type="group">
				<animation effect="slide" end="0,-90" time="300" tween="sine" easing="inout" condition="$EXP[infodialog_active]">conditional</animation>
				<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
				<control type="image">
					<left>20</left>
					<top>10</top>
					<aspectratio>keep</aspectratio>
					<width>56</width>
					<height>56</height>
					<texture colordiffuse="button_focus">icons/logo.png</texture>
				</control>
				<control type="image">
					<left>60</left>
					<top>20</top>
					<aspectratio>keep</aspectratio>
					<width>192</width>
					<height>36</height>
					<texture>icons/logo-text.png</texture>
				</control>
			</control>
			<!-- StatBar -->
			<control type="label">
				<left>0</left>
				<top>15</top>
				<width>1920</width>
				<align>center</align>
				<label>$VAR[InfoBarStats]</label>
				<font>font10</font>
				<visible>!Window.IsVisible(extendedprogressdialog)</visible>
				<visible>Skin.HasSetting(EnableHomeStats)</visible>				
			</control>
			<!-- LeftBar -->
			<control type="group">
				<include>OpenClose_Left</include>
				<include>HomeSystemButtons</include>
                <include>HomeMainMenu</include>               
			</control>			
			<!-- MainContent -->
			<control type="group" id="2000">
				<animation type="Conditional" condition="Control.IsVisible(200000)" reversible="false">
					<effect type="slide" end="0,20" time="60" tween="sine" />
					<effect type="slide" end="0,-20" time="180" tween="sine" delay="80" />
				</animation>
				<animation type="Conditional" condition="Control.IsVisible(200001)" reversible="false">
					<effect type="slide" end="0,-20" time="60" tween="sine" />
					<effect type="slide" end="0,20" time="180" tween="sine" delay="80" />
				</animation>
				<top>78</top>
				<left>20</left>
				<include>OpenClose_Right</include>
                <include>HomeSubMenu</include>
			</control>
			<!-- BottomBar -->
			<include>BottomBar</include>
			<control type="group">
				<animation effect="slide" end="0,90" time="300" tween="sine" easing="inout" condition="$EXP[infodialog_active]">conditional</animation>
				<animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
			    <!-- RSS -->
			    <control type="rss">
				    <left>0</left>
				    <top>1041</top>
				    <height>30</height>
				    <width>1920</width>
				    <font>font12</font>
				    <urlset>1</urlset>
				    <titlecolor>button_focus</titlecolor>
				    <shadowcolor>text_shadow</shadowcolor>
				    <headlinecolor>FFC0C0C0</headlinecolor>
				    <textcolor>white</textcolor>
				    <visible>!Player.hasMedia</visible>
			    </control>
			</control>
		</control>
	</controls>
</window>
