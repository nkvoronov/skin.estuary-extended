            </control>
            <control type="image">
                <description>Dialog Header image</description>
                <left>0</left>
                <top>0</top>
                <width>1682</width>
                <height>70</height>
                <texture colordiffuse="$VAR[MainColorVar]" border="2">colors/white70.png</texture>
            </control>
            <control type="label">
                <description>header label</description>
                <textoffsetx>70</textoffsetx>
                <left>-30</left>
                <top>0</top>
                <width>1682</width>
                <height>70</height>
                <font>font20_title</font>
                <label>$ADDON[script.skin.helper.colorpicker 32011]</label>
