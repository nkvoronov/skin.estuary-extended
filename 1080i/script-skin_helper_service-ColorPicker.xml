                <shadowcolor>black</shadowcolor>
            </control>
            <control type="button" id="22001">
                <description>background close area</description>
                <left>-1920</left>
                <top>-1080</top>
                <width>5760</width>
                <height>3240</height>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
