                <top>0</top>
                <width>1682</width>
                <height>728</height>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
                <onclick>noop</onclick>
            </control>
            <control type="radiobutton" id="22000">
                <description>logo</description>
                <left>1682</left>
                <top>11</top>
                <width>48</width>
                <height>48</height>
                <radiowidth>48</radiowidth>
                <radioheight>48</radioheight>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
